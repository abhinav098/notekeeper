<div class="row">
	<div class="small-12 columns">
		<% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) && !msg.blank? %>
		    <div data-alert class="alert-box <%= name %>">
		      <%= content_tag :div, msg.html_safe, class: 'alert-msg' %>
		      <a href="#" class="close">&times;</a>
		    </div>
		  <% end %>
		<% end %>
	</div>
</div>
